<div class = "mt-3">
    <button type="button" class="btn btn-primary btn-lg" id="add_sugar_btn" onclick = "display_sugar()">Sugar level</button>
    <button type="button" class="btn btn-outline-primary btn-lg"  id="add_bp_btn" onclick="display_bp()">Blood pressure level</button>
</div>

<div id = "sugar" class = "inp_1">
    <div class="input-group mb-3">
        <span class="input-group-text"></span>
        <span class="input-group-text">Sugar Level</span>
        <input id = "s_level" type="text" class="form-control" aria-label="Dollar amount (with dot and two decimal places)"></input>
    </div>

    <button type="button" class="btn btn-primary submit_btn" onclick = "add_sugar_level()">Submit</button>
</div>

<div id = "bp" class = "inp_1" style="display:none">
    <div class="input-group mb-3">
        <span class="input-group-text"></span>
        <span class="input-group-text">BP level low</span>
        <input id = "bp_low" type="text" class="form-control" aria-label="Dollar amount (with dot and two decimal places)"></input>
    </div>
    <div class="input-group mb-3">
        <span class="input-group-text"></span>
        <span class="input-group-text">BP level high</span>
        <input id = "bp_high" type="text" class="form-control" aria-label="Dollar amount (with dot and two decimal places)"></input>
    </div>

    <button type="button" class="btn btn-primary submit_btn" onclick = "add_bp_level()">Submit</button>
</div>

<div id = "mess"></div>

<script src="/js/add_data.js"></script>